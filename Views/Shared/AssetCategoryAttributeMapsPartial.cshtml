                                                            <i class='far fa-plus-square' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                    }
                                                    @if (AssetCategoryAttributeMapPermission >3){
                                                    <div id="AssetCategoryAttributeMapgrid_edit_button" class="k-button-icontext k-grid-edit circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-edit' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                    }
                                                    @if (AssetCategoryAttributeMapPermission ==5){
                                                    <div id="AssetCategoryAttributeMapgrid_delete_button" class="k-button-icontext k-grid-delete circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-trash-alt' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                    }
                                                    <div id="AssetCategoryAttributeMapgrid_update_button" class="k-button-icontext k-grid-update circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-check-circle' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                    <div id="AssetCategoryAttributeMapgrid_cancel_button" class="k-button-icontext k-grid-cancel circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-times-circle' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </text>);
                          })
                        .Columns(columns =>
                        {
				                  columns.Bound(p => p.AssetAttributeID).ClientTemplate("#:AssetAttributeName#");
				                  columns.Bound(p => p.AttrAssetCategoryID).ClientTemplate("#:AssetCategoryName#").Title("Category");
				                  columns.Bound(p => p.IsRequired).ClientTemplate("<input disabled type= 'checkbox' #= IsRequired ? checked='checked' :'' # />").EditorTemplateName("<input type= 'checkbox' #= IsRequired ? checked='checked' :'' # />");
                          columns.Bound(p => p.AssetCategoryAttributeMapID).ClientTemplate(@"<div class='columnicon' style='background-image: url(" + @Url.Content("~/Images/info.jpg") + ");'></div>").Title("Change Info").Width(50);
                        })
                        .Editable(editable => editable.Mode(GridEditMode.InLine))
                        .Groupable()
                        .Resizable(resize => resize.Columns(true))
                        .Selectable(selectable =>
                        {
                            selectable.Mode(GridSelectionMode.Single);
                            selectable.Type(GridSelectionType.Row);
                        })
                        .Sortable(sortable =>
                        {
                            sortable.SortMode(GridSortMode.SingleColumn);
                        })
                        .Navigatable()
                        .Filterable()
                        .Scrollable(scr => scr.Height(300))
                        .Events(ev => ev
                            .Change("onAssetCategoryAttributeMapgridChange")
                        )
                        .DataSource(dataSource => dataSource
                        .Ajax()
                        .ServerOperation(false)
                        .Events(events => events
                            .Error("AssetCategoryAttributeMapgriderror_error")
                            .RequestEnd("AssetCategoryAttributeMapgridrequest_end")
                        )
                        .Read(ac => ac.Action("AssetCategoryAttributeMaps_ReadByID", "AssetCategories").Data("CurrentID"))
                        .Create(ac => ac.Action("AssetCategoryAttributeMaps_New", "AssetCategoryAttributeMaps"))
                        .Update(ac => ac.Action("AssetCategoryAttributeMaps_Update", "AssetCategoryAttributeMaps"))
                        .Destroy(ac => ac.Action("AssetCategoryAttributeMaps_Destroy", "AssetCategoryAttributeMaps"))
                        .Model(model =>
                        {
				model.Id(p => p.AssetCategoryAttributeMapID); model.Field(p => p.AssetCategoryAttributeMapID).Editable(false);
				model.Field(p => p.AssetAttributeID);
				model.Field(p => p.AttrAssetCategoryID);
				model.Field(p => p.IsRequired);
				model.Field(p => p.CreateDate).Editable(false);
				model.Field(p => p.ChangeDate).Editable(false);
				model.Field(p => p.ChangedBy).Editable(false);
				model.Field(p => p.ChangedByFullName).Editable(false);
				model.Field(p => p.AssetAttributeName).Editable(false);
				model.Field(p => p.AssetCategoryName).Editable(false);
                        })
                        )
                        )
@(Html.Kendo().Tooltip()
    .For("#AssetCategoryAttributeMapgrid")
    .Filter("td:nth-child(4)")
    //.ContentTemplateId("tooltiptemplate")
    .ContentHandler("getgridTooltip")
    .Position(TooltipPosition.Top)
    .Width(250)
    .Height(100)
)
    </div>

</body>

