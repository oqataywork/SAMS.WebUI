@using Kendo.Mvc.UI;
@using SAMS.Model;
@{
    Layout = "~/Views/Shared/_Layout_partial.cshtml";
}

<script type="text/javascript">
    function AssetAttributegriderror_error(e) {
        if (e.errors) {
            var message = "There are some errors:\n";
            // Create a message containing all errors.
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            // Display the message.
            Swal.fire({ icon: 'error', text: message, showConfirmButton: true });
            // Cancel the changes.
            var grid = $("#AssetAttributegrid").data("kendoGrid");
            grid.cancelChanges();
        }
    }

    function AssetAttributegridrequest_end(e) {
        if ((e.type === "create" && e.response.Errors === null) || (e.type === "update" && e.response.Errors === null))
        {
            Swal.fire({ icon: 'success', text: "Əməliyyat uğurla tamamlandı.", showConfirmButton: false, timer: 1500 });
        }
    }

    function getgridTooltip(e) {
        var dataItem = $("#AssetAttributegrid").data("kendoGrid").dataItem(e.target.closest("tr"));
        var content = 'Created at: ' + kendo.toString(kendo.parseDate(dataItem.CreateDate), "dd.MM.yyyy HH:mm") + ' Changed at: ' + kendo.toString(kendo.parseDate(dataItem.CreateDate), "dd.MM.yyyy HH:mm") + '<br/>Changed by:' + dataItem.ChangedByFullName;
        return content;
    }


    function onAssetAttributegridChange(e) {
        var dataItem = this.dataItem(this.select());
        if(dataItem){
          var id = dataItem.AssetAttributeID;
          $("#AssetAttributeID").val(id);
        }
    }




    function FunAssetAttributeID() {
        var _selId = $("#AssetAttributeID").val();
        return {
            assetattributeid: _selId
        };
    }

    function SetAssetAttributegrid_edit(arg) {
        if (arg === true) {
            $("#AssetAttributegrid_edit_button").hide();
            $("#AssetAttributegrid_delete_button").hide();
            $("#charcat_pdf").hide();
            $("#charcat_excel").hide();
            $("#AssetAttributegrid_add_button").hide();
            $("#AssetAttributegrid_cancel_button").show();
            $("#AssetAttributegrid_update_button").show();
        }
        else {
            $("#AssetAttributegrid_edit_button").show();
            $("#AssetAttributegrid_delete_button").show();
            $("#charcat_pdf").show();
            $("#charcat_excel").show();
            $("#AssetAttributegrid_add_button").show();
            $("#AssetAttributegrid_cancel_button").hide();
            $("#AssetAttributegrid_update_button").hide();
        }
    }

    function AddAssetAttributegridrow() {
        $("#AssetAttributeID").val('');
        grid = $("#AssetAttributegrid").data("kendoGrid");
        grid.addRow();
        SetAssetAttributegrid_edit(true);
    }


    $(document).ready(function () {


        $("#AssetAttributegrid_edit_button").on("click", function (e) {
            e.preventDefault();
            var grid = $("#AssetAttributegrid").getKendoGrid();
            var selectedrow = grid.select()[0];
            if (selectedrow) {
                grid.editRow(selectedrow);
                SetAssetAttributegrid_edit(true);
            }
        });

        $("#AssetAttributegrid_add_button").on("click", function () {
            AddAssetAttributegridrow();
        });

        $("#AssetAttributegrid_delete_button").on("click", function () {
            grid = $("#AssetAttributegrid").data("kendoGrid");
            var sel = $("#AssetAttributegrid").data("kendoGrid").select();
            grid.removeRow(sel);
            SetAssetAttributegrid_edit(false);
        });

        $("#AssetAttributegrid_update_button").on("click", function () {
            debugger;
            $("#AssetAttributegrid").data("kendoGrid").saveChanges();
            SetAssetAttributegrid_edit(false);
        });

        $("#AssetAttributegrid_cancel_button").on("click", function () {
            $("#AssetAttributegrid").data("kendoGrid").cancelChanges();
            SetAssetAttributegrid_edit(false);
        });
        SetAssetAttributegrid_edit(false);

        $("#AssetAttributegrid").kendoTooltip({
            filter: "th", // Select the th elements of the Grid.
            position: "top",
            width: 250,
            content: function (e) {
                // Return the text content of the hovered header.
                return e.target.text();
            }
        }).data("kendoTooltip");
    });


</script>

<body>
    <input type="hidden" name="AssetAttributeID" id="AssetAttributeID" />
<div>
        @{
            int AssetAttributePermission = (int)ViewData["AssetAttributePermission"];
        }
        @(Html.Kendo().Grid<AssetAttributeModel>()
                        .Name("AssetAttributegrid")
                          .ToolBar(toolbar =>
                          {
                          toolbar.Template(@<text>
                                                <div class="toolbar">
                                                    @if (AssetAttributePermission >2){           
                                                     <div id="AssetAttributegrid_add_button" class="k-button-icontext k-grid-add circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-plus-square' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                    }
                                                    @if (AssetAttributePermission >3){
                                                    <div id="AssetAttributegrid_edit_button" class="k-button-icontext k-grid-edit circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-edit' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                    }
                                                    @if (AssetAttributePermission ==5){
                                                    <div id="AssetAttributegrid_delete_button" class="k-button-icontext k-grid-delete circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-trash-alt' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                    }
                                                    <div id="AssetAttributegrid_update_button" class="k-button-icontext k-grid-update circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-check-circle' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                    <div id="AssetAttributegrid_cancel_button" class="k-button-icontext k-grid-cancel circleButton">
                                                        <a href="#">
                                                            <span class="inner"></span>
                                                            <i class='far fa-times-circle' style='font-size:18px'></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </text>);
                          })
                        .Columns(columns =>
                        {
				                  columns.Bound(p => p.AssetAttributeName);
				                  columns.Bound(p => p.AssetAttributeCategoryID).ClientTemplate("#:AssetAttributeCategoryName#");
				                  columns.Bound(p => p.AssetAttributeType).ClientTemplate("#:AssetAttributeTypeEnumName#");
				                  columns.Bound(p => p.Deactivate).ClientTemplate("<input disabled type= 'checkbox' #= Deactivate ? checked='checked' :'' # />").EditorTemplateName("<input type= 'checkbox' #= Deactivate ? checked='checked' :'' # />");
				                  columns.Bound(p => p.CreateDate).Format("{0:dd.MM.yyyy}");
				                  columns.Bound(p => p.ChangeDate).Format("{0:dd.MM.yyyy}");
                          columns.Bound(p => p.AssetAttributeID).ClientTemplate(@"<div class='columnicon' style='background-image: url(" + @Url.Content("~/Images/info.jpg") + ");'></div>").Title("Change Info").Width(50);
                        })
                        .Editable(editable => editable.Mode(GridEditMode.InLine))
                        .Groupable()
                        .Resizable(resize => resize.Columns(true))
                        .Selectable(selectable =>
                        {
                            selectable.Mode(GridSelectionMode.Single);
                            selectable.Type(GridSelectionType.Row);
                        })
                        .Sortable(sortable =>
                        {
                            sortable.SortMode(GridSortMode.SingleColumn);
                        })
                        .Navigatable()
                        .Filterable()
                        .Scrollable(scr => scr.Height(600))
                        .Events(ev => ev
                            .Change("onAssetAttributegridChange")
                        )
                        .DataSource(dataSource => dataSource
                        .Ajax()
                        .ServerOperation(false)
                        .Events(events => events
                            .Error("AssetAttributegriderror_error")
                            .RequestEnd("AssetAttributegridrequest_end")
                        )
                        .Read(ac => ac.Action("AssetAttributes_Read", "AssetAttributes"))
                        .Create(ac => ac.Action("AssetAttributes_Create", "AssetAttributes"))
                        .Update(ac => ac.Action("AssetAttributes_Update", "AssetAttributes"))
                        .Destroy(ac => ac.Action("AssetAttributes_Destroy", "AssetAttributes"))
                        .Model(model =>
                        {
				model.Id(p => p.AssetAttributeID); model.Field(p => p.AssetAttributeID).Editable(false);
				model.Field(p => p.AssetAttributeCategoryID);
				model.Field(p => p.AssetAttributeName);
				model.Field(p => p.AssetAttributeType);
				model.Field(p => p.Deactivate);
				model.Field(p => p.CreateDate).Editable(false);
				model.Field(p => p.ChangeDate).Editable(false);
				model.Field(p => p.ChangedBy).Editable(false);
				model.Field(p => p.ChangedByFullName).Editable(false);
				model.Field(p => p.AssetAttributeCategoryName);
				model.Field(p => p.AssetAttributeTypeEnumName);
                        })
                        )
                        )
@(Html.Kendo().Tooltip()
    .For("#AssetAttributegrid")
    .Filter("td:nth-child(7)")
    //.ContentTemplateId("tooltiptemplate")
    .ContentHandler("getgridTooltip")
    .Position(TooltipPosition.Top)
    .Width(250)
    .Height(100)
)
    </div>

</body>

