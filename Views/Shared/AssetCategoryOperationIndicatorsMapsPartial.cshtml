                        .Destroy(ac => ac.Action("AssetCategoryOperationIndicatorsMaps_Destroy", "AssetCategoryOperationIndicatorsMaps"))
                        .Model(model =>
                        {
				model.Id(p => p.AssetCategoryOperationIndicatorID); model.Field(p => p.AssetCategoryOperationIndicatorID).Editable(false);
				model.Field(p => p.OperationIndicatorID);
				model.Field(p => p.OperIndAssetCategoryID);
