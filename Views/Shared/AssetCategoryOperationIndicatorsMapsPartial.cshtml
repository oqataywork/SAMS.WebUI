@using Kendo.Mvc.UI;
@using SAMS.Model;
@{
    Layout = "~/Views/Shared/_Layout_partial.cshtml";
}

<script type="text/javascript">
    function AssetCategoryOperationIndicatorsMapgriderror_error(e) {
        if (e.errors) {
            var message = "There are some errors:\n";
            // Create a message containing all errors.
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            // Display the message.
            Swal.fire({ icon: 'error', text: message, showConfirmButton: true });
            // Cancel the changes.
            var grid = $("#AssetCategoryOperationIndicatorsMapgrid").data("kendoGrid");
            grid.cancelChanges();
        }
    }

    function AssetCategoryOperationIndicatorsMapgridrequest_end(e) {
        if ((e.type === "create" && e.response.Errors === null) || (e.type === "update" && e.response.Errors === null))
        {
            Swal.fire({ icon: 'success', text: "Əməliyyat uğurla tamamlandı.", showConfirmButton: false, timer: 1500 });
        }
    }

    function getgridTooltip(e) {
        var dataItem = $("#AssetCategoryOperationIndicatorsMapgrid").data("kendoGrid").dataItem(e.target.closest("tr"));
        var content = 'Created at: ' + kendo.toString(kendo.parseDate(dataItem.CreateDate), "dd.MM.yyyy HH:mm") + ' Changed at: ' + kendo.toString(kendo.parseDate(dataItem.CreateDate), "dd.MM.yyyy HH:mm") + '<br/>Changed by:' + dataItem.ChangedByFullName;
        return content;
    }


    function onAssetCategoryOperationIndicatorsMapgridChange(e) {
        var dataItem = this.dataItem(this.select());
        if(dataItem){
          var id = dataItem.AssetCategoryOperationIndicatorID;
          $("#AssetCategoryOperationIndicatorID").val(id);
        }
    }




    function FunAssetCategoryOperationIndicatorID() {
        var _selId = $("#AssetCategoryOperationIndicatorID").val();
        return {
            assetcategoryoperationindicatorid: _selId
        };
    }

    function SetAssetCategoryOperationIndicatorsMapgrid_edit(arg) {
        if (arg === true) {
            $("#AssetCategoryOperationIndicatorsMapgrid_edit_button").hide();
            $("#AssetCategoryOperationIndicatorsMapgrid_delete_button").hide();
            $("#charcat_pdf").hide();
            $("#charcat_excel").hide();
            $("#AssetCategoryOperationIndicatorsMapgrid_add_button").hide();
            $("#AssetCategoryOperationIndicatorsMapgrid_cancel_button").show();
            $("#AssetCategoryOperationIndicatorsMapgrid_update_button").show();
        }
        else {
            $("#AssetCategoryOperationIndicatorsMapgrid_edit_button").show();
            $("#AssetCategoryOperationIndicatorsMapgrid_delete_button").show();
            $("#charcat_pdf").show();
            $("#charcat_excel").show();
            $("#AssetCategoryOperationIndicatorsMapgrid_add_button").show();
            $("#AssetCategoryOperationIndicatorsMapgrid_cancel_button").hide();
            $("#AssetCategoryOperationIndicatorsMapgrid_update_button").hide();
        }
    }

    function AddAssetCategoryOperationIndicatorsMapgridrow() {
        $("#AssetCategoryOperationIndicatorID").val('');
        grid = $("#AssetCategoryOperationIndicatorsMapgrid").data("kendoGrid");
        grid.addRow();
        SetAssetCategoryOperationIndicatorsMapgrid_edit(true);
    }


    $(document).ready(function () {


        $("#AssetCategoryOperationIndicatorsMapgrid_edit_button").on("click", function (e) {
            e.preventDefault();
            var grid = $("#AssetCategoryOperationIndicatorsMapgrid").getKendoGrid();
            var selectedrow = grid.select()[0];
            if (selectedrow) {
                grid.editRow(selectedrow);
                SetAssetCategoryOperationIndicatorsMapgrid_edit(true);
            }
        });

        $("#AssetCategoryOperationIndicatorsMapgrid_add_button").on("click", function () {
            AddAssetCategoryOperationIndicatorsMapgridrow();
        });

        $("#AssetCategoryOperationIndicatorsMapgrid_delete_button").on("click", function () {
            grid = $("#AssetCategoryOperationIndicatorsMapgrid").data("kendoGrid");
            var sel = $("#AssetCategoryOperationIndicatorsMapgrid").data("kendoGrid").select();
            grid.removeRow(sel);
            SetAssetCategoryOperationIndicatorsMapgrid_edit(false);
        });

        $("#AssetCategoryOperationIndicatorsMapgrid_update_button").on("click", function () {
            debugger;
            $("#AssetCategoryOperationIndicatorsMapgrid").data("kendoGrid").saveChanges();
            SetAssetCategoryOperationIndicatorsMapgrid_edit(false);
        });

        $("#AssetCategoryOperationIndicatorsMapgrid_cancel_button").on("click", function () {
            $("#AssetCategoryOperationIndicatorsMapgrid").data("kendoGrid").cancelChanges();
            SetAssetCategoryOperationIndicatorsMapgrid_edit(false);
        });
        SetAssetCategoryOperationIndicatorsMapgrid_edit(false);

        $("#AssetCategoryOperationIndicatorsMapgrid").kendoTooltip({
            filter: "th", // Select the th elements of the Grid.
            position: "top",
            width: 250,
            content: function (e) {
                // Return the text content of the hovered header.
                return e.target.text();
            }
        }).data("kendoTooltip");
    });


</script>

<body>
