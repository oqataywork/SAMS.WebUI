                        })
                        .Editable(editable => editable.Mode(GridEditMode.InLine))
                        .Groupable()
                        .Resizable(resize => resize.Columns(true))
                        .Selectable(selectable =>
                        {
                            selectable.Mode(GridSelectionMode.Single);
                            selectable.Type(GridSelectionType.Row);
                        })
                        .Sortable(sortable =>
                        {
                            sortable.SortMode(GridSortMode.SingleColumn);
                        })
                        .Navigatable()
                        .Filterable()
                        .Scrollable(scr => scr.Height(300))
                        .Events(ev => ev
                            .Change("onAssetCategoryCharacteristicsMapgridChange")
                        )
                        .DataSource(dataSource => dataSource
                        .Ajax()
                        .ServerOperation(false)
                        .Events(events => events
                            .Error("AssetCategoryCharacteristicsMapgriderror_error")
                            .RequestEnd("AssetCategoryCharacteristicsMapgridrequest_end")
                        )
                        .Read(ac => ac.Action("AssetCategoryCharacteristicsMaps_ReadByID", "AssetCategories").Data("CurrentID"))
                        .Create(ac => ac.Action("AssetCategoryCharacteristicsMaps_New", "AssetCategoryCharacteristicsMaps"))
                        .Update(ac => ac.Action("AssetCategoryCharacteristicsMaps_Update", "AssetCategoryCharacteristicsMaps"))
                        .Destroy(ac => ac.Action("AssetCategoryCharacteristicsMaps_Destroy", "AssetCategoryCharacteristicsMaps"))
                        .Model(model =>
                        {
				model.Id(p => p.AssetCategoryCharacteristicID); model.Field(p => p.AssetCategoryCharacteristicID).Editable(false);
				model.Field(p => p.CharacteristicID);
				model.Field(p => p.CatAssetCategoryID);
				model.Field(p => p.UnitTypeID);
				model.Field(p => p.CreateDate).Editable(false);
				model.Field(p => p.ChangeDate).Editable(false);
				model.Field(p => p.ChangedBy).Editable(false);
				model.Field(p => p.ChangedByFullName);
				model.Field(p => p.CharacteristicName);
				model.Field(p => p.AssetCategoryName);
				model.Field(p => p.UnitTypeName);
                        })
                        )
                        )
@(Html.Kendo().Tooltip()
    .For("#AssetCategoryCharacteristicsMapgrid")
    .Filter("td:nth-child(4)")
    //.ContentTemplateId("tooltiptemplate")
    .ContentHandler("getgridTooltip")
    .Position(TooltipPosition.Top)
    .Width(250)
    .Height(100)
)
    </div>

</body>

