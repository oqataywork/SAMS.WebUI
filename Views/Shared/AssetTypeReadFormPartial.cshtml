@using SAMS.Model;

@model AssetTypeModel

<style>
    .k-form-fieldset {
        overflow-y: scroll;
    }

    .editor-label {
        font-size: 12px;
        margin: 10px;
    }

    .editor-field {
        font-size: 16px;
        margin: 10px;
    }
</style>

<div>

    @using (Html.BeginForm())
    {
        <fieldset>
            <div hidden="hidden">
