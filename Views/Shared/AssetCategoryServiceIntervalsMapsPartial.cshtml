@using Kendo.Mvc.UI;
@using SAMS.Model;
@{
    Layout = "~/Views/Shared/_Layout_partial.cshtml";
}

<script type="text/javascript">
    function AssetCategoryServiceIntervalsMapgriderror_error(e) {
        if (e.errors) {
            var message = "There are some errors:\n";
            // Create a message containing all errors.
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            // Display the message.
            Swal.fire({ icon: 'error', text: message, showConfirmButton: true });
            // Cancel the changes.
            var grid = $("#AssetCategoryServiceIntervalsMapgrid").data("kendoGrid");
            grid.cancelChanges();
        }
    }

    function AssetCategoryServiceIntervalsMapgridrequest_end(e) {
        if ((e.type === "create" && e.response.Errors === null) || (e.type === "update" && e.response.Errors === null))
        {
            Swal.fire({ icon: 'success', text: "Əməliyyat uğurla tamamlandı.", showConfirmButton: false, timer: 1500 });
        }
    }

    function getgridTooltip(e) {
        var dataItem = $("#AssetCategoryServiceIntervalsMapgrid").data("kendoGrid").dataItem(e.target.closest("tr"));
        var content = 'Created at: ' + kendo.toString(kendo.parseDate(dataItem.CreateDate), "dd.MM.yyyy HH:mm") + ' Changed at: ' + kendo.toString(kendo.parseDate(dataItem.CreateDate), "dd.MM.yyyy HH:mm") + '<br/>Changed by:' + dataItem.ChangedByFullName;
        return content;
    }


    function onAssetCategoryServiceIntervalsMapgridChange(e) {
        var dataItem = this.dataItem(this.select());
        if(dataItem){
          var id = dataItem.AssetCategoryServiceIntervalID;
          $("#AssetCategoryServiceIntervalID").val(id);
        }
    }




    function FunAssetCategoryServiceIntervalID() {
        var _selId = $("#AssetCategoryServiceIntervalID").val();
        return {
            assetcategoryserviceintervalid: _selId
        };
    }

    function SetAssetCategoryServiceIntervalsMapgrid_edit(arg) {
        if (arg === true) {
            $("#AssetCategoryServiceIntervalsMapgrid_edit_button").hide();
            $("#AssetCategoryServiceIntervalsMapgrid_delete_button").hide();
            $("#charcat_pdf").hide();
            $("#charcat_excel").hide();
            $("#AssetCategoryServiceIntervalsMapgrid_add_button").hide();
            $("#AssetCategoryServiceIntervalsMapgrid_cancel_button").show();
            $("#AssetCategoryServiceIntervalsMapgrid_update_button").show();
        }
        else {
            $("#AssetCategoryServiceIntervalsMapgrid_edit_button").show();
            $("#AssetCategoryServiceIntervalsMapgrid_delete_button").show();
            $("#charcat_pdf").show();
            $("#charcat_excel").show();
            $("#AssetCategoryServiceIntervalsMapgrid_add_button").show();
            $("#AssetCategoryServiceIntervalsMapgrid_cancel_button").hide();
            $("#AssetCategoryServiceIntervalsMapgrid_update_button").hide();
        }
    }

    function AddAssetCategoryServiceIntervalsMapgridrow() {
        $("#AssetCategoryServiceIntervalID").val('');
        grid = $("#AssetCategoryServiceIntervalsMapgrid").data("kendoGrid");
        grid.addRow();
        SetAssetCategoryServiceIntervalsMapgrid_edit(true);
    }


    $(document).ready(function () {


        $("#AssetCategoryServiceIntervalsMapgrid_edit_button").on("click", function (e) {
            e.preventDefault();
            var grid = $("#AssetCategoryServiceIntervalsMapgrid").getKendoGrid();
            var selectedrow = grid.select()[0];
            if (selectedrow) {
                grid.editRow(selectedrow);
                SetAssetCategoryServiceIntervalsMapgrid_edit(true);
            }
        });

        $("#AssetCategoryServiceIntervalsMapgrid_add_button").on("click", function () {
            AddAssetCategoryServiceIntervalsMapgridrow();
        });

        $("#AssetCategoryServiceIntervalsMapgrid_delete_button").on("click", function () {
            grid = $("#AssetCategoryServiceIntervalsMapgrid").data("kendoGrid");
            var sel = $("#AssetCategoryServiceIntervalsMapgrid").data("kendoGrid").select();
            grid.removeRow(sel);
            SetAssetCategoryServiceIntervalsMapgrid_edit(false);
        });

        $("#AssetCategoryServiceIntervalsMapgrid_update_button").on("click", function () {
            debugger;
            $("#AssetCategoryServiceIntervalsMapgrid").data("kendoGrid").saveChanges();
            SetAssetCategoryServiceIntervalsMapgrid_edit(false);
        });

        $("#AssetCategoryServiceIntervalsMapgrid_cancel_button").on("click", function () {
            $("#AssetCategoryServiceIntervalsMapgrid").data("kendoGrid").cancelChanges();
            SetAssetCategoryServiceIntervalsMapgrid_edit(false);
        });
        SetAssetCategoryServiceIntervalsMapgrid_edit(false);

        $("#AssetCategoryServiceIntervalsMapgrid").kendoTooltip({
            filter: "th", // Select the th elements of the Grid.
            position: "top",
            width: 250,
            content: function (e) {
                // Return the text content of the hovered header.
                return e.target.text();
            }
        }).data("kendoTooltip");
    });


</script>

