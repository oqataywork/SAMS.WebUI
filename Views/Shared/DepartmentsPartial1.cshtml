@{
    Layout = null;
}






<script>
    var crudServiceBaseUrl = "";
    var validator;





    var viewModel = kendo.observable({

        dataSource: new kendo.data.DataSource({
            transport: {
                read: {
                    url: '@Url.Action("Read", "Departments")',
                    contentType: "application/json"
                },
                update: {
                    url: '@Url.Action("Update", "Departments")',
                    dataType: "json",
                    type: "POST"
                },
                destroy: {
                    url: '@Url.Action("Destroy", "Departments")',
                    dataType: "json",
                    type: "POST"
                },
                create: {
                    url: '@Url.Action("Create", "Departments")',
                    dataType: "json",
                    type: "POST"
                },
                parameterMap: function (options, operation) {
                    debugger;
                    if (operation !== "read" && options.models) {
                        return { models: kendo.stringify(options.models) };
                    }
                }
            },
            batch: true,
            pageSize: 20,
            schema: {
                model: {
                    id: "DepartmentID",
                    fields: {
                        DepartmentID: { editable: false, nullable: true },
                        DepartmentName: { validation: { required: true } },
                        Organization: { validation: { required: true } },
                        Location: { validation: { required: true } },
                        Deactivate: { validation: { required: true } }

                    }
                }
            },
            change: function () {
                viewModel.set("hasChanges", this.hasChanges());
            }
        }),
        selected: {},
        hasChanges: false,
        sync: function () {
            if (validator.validate()) {
                this.dataSource.sync();
            }
        },
        cancel: function () {
            this.dataSource.cancelChanges();
            validator.hideMessages();
        }
    });
    debugger;
    kendo.bind($("#editForm"), viewModel);
    validator = $("#editForm").kendoValidator().data("kendoValidator");

    var grid = $("#grid").kendoGrid({
        dataSource: viewModel.dataSource,
        pageable: true,
        height: 430,
        columns: [
            { field: "DepartmentName", title: "DepartmentName", width: 110 },
            { field: "OrganizationName", title: "OrganizationName", width: 110 },
            { field: "Deactivate", width: 50 }
        ],
        selectable: true,
        dataBound: function (e) {
            var row = this.tbody.find(">tr[data-uid=" + viewModel.selected.uid + "]");
            if (row) {
                this.select(row);
            }
        },
        change: function (e) {
            debugger;
            var model = this.dataItem(this.select());
            //validator.hideMessages();
            viewModel.set("selected", model);

        }
    }).data("kendoGrid");

    $("#grid").data("kendoGrid").one("dataBound", function (e) {
        this.select(this.tbody.find(">tr:first"));
    });

</script>

<table>
    <tr>
        <td>
            <div id="grid"></div>
        </td>
        <td>

            <partial name="DepartmentFormPartial" model=viewModel.selected />
            @*@{Html.RenderPartial("DepartmentFormPartial");}*@
        </td>
    </tr>
</table>


